@{
    ViewBag.Title = "Reservados";
}

<div class="page-header">
    <h1>
        Estacionamiento
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Reservados
        </small>
    </h1>
</div>

<div class="row">
    <div class="col-xs-12">
        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Patente</th>
                    <th>Cliente</th>
                    <th>Tiempo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>XX-1123</td>
                    <td>Patricio Pino</td>
                    <td>1:50</td>
                    <td>
                        <a class="green" href="#" data-toggle="modal" data-target="#modalRegistro">
                            <i class="ace-icon fa fa-check-square-o bigger-130"></i>
                        </a>
                        &nbsp;
                        <a class="red" href="#" data-toggle="modal" data-target="#myModal">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>XX-1123</td>
                    <td>Juan Soto</td>
                    <td>1:45</td>
                    <td>
                        <a class="green" href="#" data-toggle="modal" data-target="#modalRegistro">
                            <i class="ace-icon fa fa-check-square-o bigger-130"></i>
                        </a>
                        &nbsp;
                        <a class="red" href="#" data-toggle="modal" data-target="#myModal">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalRegistro" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Estacionar Cliente</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12">
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Estacionamiento</label>
                                <div class="col-sm-9">
                                    <input type="text" id="form-field-1" class="col-xs-5" value="Estacionamientos Annita" disabled/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Slot</label>
                                <div class="col-sm-9">
                                    <select class="col-xs-5" id="form-field-select-1">
                                        <option disabled selected>Seleccione un slot</option>
                                        <option>ABC-1</option>
                                        <option>SAD-12</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Patente</label>
                                <div class="col-sm-9">
                                    <input type="text" id="form-field-1" class="col-xs-5" value="XX -1123" disabled />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Cliente</label>
                                <div class="col-sm-9">
                                    <input type="text" id="form-field-1" class="col-xs-5" value="Patricio Pino" disabled />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm" data-dismiss="modal">
                    <i class="ace-icon fa fa-arrow-left bigger-110"></i>
                    Cancelar
                </button>
                <button type="button" class="btn btn-sm btn-success">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    Aceptar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Eliminar Cliente de Reservas</h4>
            </div>
            <div class="modal-body">
                <div>
                    <label style="font-weight: bold;">Estacionamiento</label>
                    <div>
                        <i class="ace-icon fa fa-angle-right bigger-110 green"></i>
                        Estacionamientos Annita
                    </div>
                </div>
                <div>
                    <label style="font-weight: bold;">Patente</label>
                    <div>
                        <i class="ace-icon fa fa-angle-right bigger-110 green"></i>
                        XX-1122
                    </div>
                </div>
                <div>
                    <label style="font-weight: bold;">Cliente</label>
                    <div>
                        <i class="ace-icon fa fa-angle-right bigger-110 green"></i>
                        Patricio Pino
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm" data-dismiss="modal">
                    <i class="ace-icon fa fa-arrow-left bigger-110"></i>
                    Cancelar
                </button>
                <button type="button" class="btn btn-sm btn-danger">
                    <i class="ace-icon fa fa-trash-o bigger-110"></i>
                    Eliminar
                </button>
            </div>
        </div>
    </div>
</div>
