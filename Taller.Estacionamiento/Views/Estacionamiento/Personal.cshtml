@model IEnumerable<Taller.Estacionamiento.Models.Personal>

@{
    ViewBag.Title = "Personal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="main-content">
    <div class="page-header">
        <h1>
            Estacionamiento
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Personal
            </small>
        </h1>
    </div>

    @ViewData["mensajeCrearPersonal"]

    <div class="row">
        <div class="col-xs-12">
            <button class="btn btn-info pull-right" style="margin-bottom:5px" type="button" data-toggle="modal" data-target="#modalRegistro">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Nuevo Personal
            </button>
        </div>

        <!-- lista personal -start-->
        <div class="col-xs-12">
            <table id="personal-dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Rut</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Rut)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>@Html.DisplayTextFor(modelItem => item.Rol)</td>
                            <td>
                                <div class="personal-editar-eliminar">
                                    <div class="action-buttons">
                                        <a class="green" href="#" data-toggle="modal" data-nombre="@item.Nombre" data-rut="@item.Rut" data-email="@item.Email" data-telefono="@item.Telefono" data-rol="@item.Rol" data-target="#modalEditar">
                                            <span class="label label-success">
                                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                Editar
                                            </span>
                                        </a>
                                        <a class="red" href="#" data-toggle="modal" data-nombre="@item.Nombre" data-rut="@item.Rut" data-email="@item.Email" data-telefono="@item.Telefono" data-rol="@item.Rol" data-target="#modalEliminar">
                                            <span class="label label-danger">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                Eliminar
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <!-- list personal -end-->

    </div>
</div>

<div>
    <!-- PartialView PersonalCrear -start -->
    @{
        Html.RenderAction("PersonalCrear", "Estacionamiento", new { id = @ViewData["idEstacionamiento"] });
    }
    <!-- PartialView PersonalCrear -end -->
</div>

<div>
    <!-- Bootstrap modal editar -start -->
    @{
        Html.RenderAction("PersonalEditar", "Estacionamiento", new { id = @ViewData["idEstacionamiento"] });
    }
    <!-- Bootstrap modal editar -end -->
</div>

<div>
    <!-- Bootstrap modal eliminar -start -->
    @{
        Html.RenderAction("PersonalEliminar", "Estacionamiento", new { id = @ViewData["idEstacionamiento"] });
    }
    <!-- Bootstrap modal eliminar-end -->
</div>


@section ViewsScripts {

    <script type="text/javascript" src="@Url.Content("../../Scripts/personal/personal.js")"></script>

    <!-- Permite editar y eliminar un personal -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/personal/personal-vista.js")"></script>

}