@model IEnumerable<Taller.Estacionamiento.Models.Espacio>

@{
    ViewBag.Title = "Administrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main-content">
    <div class="page-header">
        <h1>
            Estacionamiento
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Administrar
            </small>
        </h1>
    </div>
   
    @ViewData["mensajeCrearSlot"]
   
    <div class="row">
        <div class="col-xs-12">
            <button class="btn btn-info pull-right" style="margin-bottom:5px" type="button" data-toggle="modal" data-target="#modalAgregar">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Nuevo Slot
            </button>
        </div>


        <div class="col-xs-12">
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                            @if (@item.Estado.Equals(Taller.Estacionamiento.Models.EstadoEspacio.NoDisponible))
                            {
                                <td>
                                    <span class="label label-sm">@item.Estado</span>
                                </td>
                            }
                            @if (@item.Estado.Equals(Taller.Estacionamiento.Models.EstadoEspacio.Disponible))
                            {
                                <td>
                                    <span class="label label-sm label-success">@item.Estado</span>
                                </td>
                            }
                            @if (@item.Estado.Equals(Taller.Estacionamiento.Models.EstadoEspacio.Ocupado))
                            {
                                <td>
                                    <span class="label label-sm label-danger">@item.Estado</span>
                                </td>
                            }
                            @if (@item.Estado.Equals(Taller.Estacionamiento.Models.EstadoEspacio.Reservado))
                            {
                                <td>
                                    <span class="label label-sm label-warning">@item.Estado</span>
                                </td>
                            }
                            <td>
                                <div class="slot-editar-eliminar">
                                    <div class="action-buttons">
                                        <a class="red" href="#" data-toggle="modal" data-codigo="@item.Codigo" data-estado="@item.Estado" data-target="#modalEliminar">
                                            <span class="label label-danger">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                Eliminar
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
   </div>
</div>
<div>
    <!-- PartialView AgregarSlot -start -->
    @{
        Html.RenderAction("AgregarSlot", "Estacionamiento", new { id = @ViewData["idEstacionamiento"] });
    }
    <!-- PartialView AgregarSlot -end -->
</div>
<div>
    <!-- PartialView EliminarSlot -start -->
    @{
        Html.RenderAction("EliminarSlot", "Estacionamiento", new { id = @ViewData["idEstacionamiento"] });
    }
    <!-- PartialView EliminarSlot -end -->
</div>

@section ViewsScripts {

   <script type="text/javascript">
       $(document).ready(function () {
           $("#dynamic-table").dataTable({
               "language": {
                   "sProcessing": "Procesando...",
                   "sLengthMenu": "Mostrar _MENU_ registros",
                   "sZeroRecords": "No se encontraron resultados",
                   "sEmptyTable": "Ningún dato disponible en esta tabla",
                   "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                   "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                   "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                   "sInfoPostFix": "",
                   "sSearch": "Buscar:",
                   "sUrl": "",
                   "sInfoThousands": ",",
                   "sLoadingRecords": "Cargando...",
                   "oPaginate": {
                       "sFirst": "Primero",
                       "sLast": "Último",
                       "sNext": "Siguiente",
                       "sPrevious": "Anterior"
                   },
                   "oAria": {
                       "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                       "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                   }
               }
           });
       });
  

                    // se selecciona el boton eliminar de cada slot
            $(".slot-editar-eliminar").find(".red").on("click", function (e) {

                var codigo = $(this).attr("data-codigo");
                var estado = $(this).attr("data-estado");

                $("#slot-eliminar-codigo").val(codigo);
                $("#slot-eliminar-estado").val(estado);

                $("#slot-eliminar-codigo-hidden").val(codigo);
                $("#slot-eliminar-estado-hidden").val(estado);

                $(this).attr("#modalEliminar").dialog("open");

                return false;


            });
    </script>



   

}