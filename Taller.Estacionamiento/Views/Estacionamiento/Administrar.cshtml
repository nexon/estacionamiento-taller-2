@{
    ViewBag.Title = "Administrar";
}

<body class="no-skin">

    <div class="page-content">
        <div class="page-header">
            <h1>
                Estacionamiento
                <small>
                    <i class="ace-icon fa fa-angle-double-right"></i>
                    Administrar
                </small>
            </h1>
        </div><!-- /.page-header -->

        <div class="row">
            <div class="col-xs-12">
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Identificador</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>ABC-123</td>
                            <td>
                                <span class="label label-sm">No Disponible</span>
                            </td>
                            <td>
                                <a class="green" href="@Url.Action("EditarSlot","Estacionamiento")">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                &nbsp;
                                <a class="red" href="#" data-toggle="modal" data-target="#myModal">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </td>
                        </tr>

                        <tr>
                            <td>2</td>
                            <td>ABC-134</td>
                            <td>
                                <span class="label label-sm label-success">Disponible</span>
                            </td>
                            <td>
                                <a class="green" href="@Url.Action("EditarSlot", "Estacionamiento")">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                &nbsp;
                                <a class="red" href="#" data-toggle="modal" data-target="#myModal">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </td>
                        </tr>

                        <tr>
                            <td>3</td>
                            <td>ABC-345</td>
                            <td>
                                <span class="label label-sm label-danger">Ocupado</span>
                            </td>
                            <td>
                                <a class="green" href="@Url.Action("EditarSlot", "Estacionamiento")">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                &nbsp;
                                <a class="red" href="#" data-toggle="modal" data-target="#myModal">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>4</td>
                            <td>ABC-645</td>
                            <td>
                                <span class="label label-sm label-warning">Reservado</span>
                            </td>
                            <td>
                                <a class="green" href="@Url.Action("EditarSlot", "Estacionamiento")">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                &nbsp;
                                <a class="red" href="#" data-toggle="modal" data-target="#myModal">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div><!-- /.col -->
        </div>
        &nbsp;
        <div class="row">
            <div class="col-xs-12">
                <a href="@Url.Action("AgregarSlot","Estacionamiento")">
                    <button class="btn btn-sm btn-primary">
                        <i class="ace-icon fa fa-plus"></i>
                        Nuevo Slot
                    </button>
                </a>
            </div>
        </div>

    </div>
    <!-- basic scripts -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Eliminar Slot</h4>
                </div>
                <div class="modal-body">
                    <div>
                        <label>Número</label>
                        <div>
                            <p>1</p>
                        </div>
                    </div>
                    <div>
                        <label>Identificador</label>
                        <div>
                            <p>ABC-123</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm" data-dismiss="modal">
                        <i class="ace-icon fa fa-arrow-left bigger-110"></i>
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-sm btn-danger">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Eliminar
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</body>