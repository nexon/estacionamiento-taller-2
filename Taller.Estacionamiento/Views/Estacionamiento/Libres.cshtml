@model Taller.Estacionamiento.Models.Estacionamiento
@{
    ViewBag.Title = "Libres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>
        @Model.Nombre
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            @ViewBag.Title
        </small>
    </h1>
</div>
<div class="row">
    <div class="col-xs-12">
        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Espacio</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var libre in Model.Disponibles())
                {
                    <tr>
                        <td>@Html.Label("Nombre", libre.Codigo)</td>
                        <td>
                            <div class="action-buttons">
                                <a data-toggle="modal" data-id="@Model.ID" data-nombre="@Model.Nombre" data-codigo="@libre.Codigo" class="open-EstacionarVehiculoModal" href="#EstacionarVehiculoModal">
                                    <span class="label label-success">
                                        <i class="ace-icon fa fa-car bigger-120"></i>
                                        Registrar
                                    </span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_EstacionarVehiculo", new Taller.Estacionamiento.Models.Espacio() { })


@section ViewsScripts {
    <script type="text/javascript">
        $("#dynamic-table").dataTable({
            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "No se encontraron resultados",
                "sEmptyTable": "Ningún dato disponible en esta tabla",
                "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                "sInfoPostFix": "",
                "sSearch": "Buscar:",
                "sUrl": "",
                "sInfoThousands": ",",
                "sLoadingRecords": "Cargando...",
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                },
                "oAria": {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }
            }
        });
        $(document).on("click", ".open-EstacionarVehiculoModal", function () {
            var data_id = $(this).data('id');
            var data_nombre = $(this).data('nombre');
            var data_codigo = $(this).data('codigo');

            var id = document.getElementById("ID");
            var nombre = document.getElementById("nombre");
            var codigo = document.getElementById("codigo");
            var cod = document.getElementById("cod");

            id.value = data_id;
            nombre.value = data_nombre;
            codigo.value = data_codigo;
            cod = data_codigo;

        });
    </script>
}